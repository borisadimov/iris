@import 'nib'
@import 'settings'

global-reset()


body
  min-height 100vh
  background url(/bg2.jpg) center center no-repeat
  background-size cover
  font-size 16px


  .logo
    position absolute
    top 30px
    left 40px
    background url(/iris3.svg) left center no-repeat
    background-size auto 100%
    padding-left 2.5rem
    padding-top 0.5rem
    bold 3rem 3rem

    color #fff

    shadow()

  .phone
    position: absolute
    top 2rem
    right 3rem
    shadow()
    .callback
      medium 1rem 4rem
      color white
      &:before
        icon "\f4b9"
        font-size 1.8rem
        vertical-align bottom
        line-height 4rem
        margin-right 0.5rem


  .slogan
    color white
    position absolute
    width 60%
    top 45%
    left 50%
    transform translate(-50%,-50%)
    .h2
      thin 3rem 4rem
      text-align center
      text-transform uppercase
      shadow()
      margin-bottom 1.5rem
    .h3
      text-align center
      medium 1rem 1.4rem
      shadow()
