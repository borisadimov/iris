@import 'nib'
@import 'settings'
// @import url('http://fonts.googleapis.com/css?family=Roboto:500,700,400')

global-reset()

@keyframes fadeIn {
  from {
    opacity 0
  }
  to {
    opacity 1
  }
}

// common classes
.container
  container(1000px)
  padding 0 2rem

// end common classes

*
  box-sizing border-box

body
  regular 16px 22px

  .mainbg
    background url(/bg.jpg) center center no-repeat
    background-size cover
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    z-index: -1
    transform: translate3d(0,0,0)
  &.main

    // background-attachment fixed

    .first
      width 100%
      height 100%
      height 100vh
      min-height 400px

      .intro__arrow
        position absolute
        z-index 99
        bottom 20px
        left 50%
        width 140px
        margin-left -70px
        height 50px
        cursor pointer
        opacity 0
        animation fadeIn 1s
        animation-delay 1s
        animation-fill-mode forwards

      .intro__arrow__inner
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background url('/arrow-bottom.svg') no-repeat 50% 50%
        background-size 43px 24px

      .intro-animation
        animation arrow 1s infinite
      .intro-opacity
        opacity 0
        transition 1s
      @-webkit-keyframes arrow
        0%
        -webkit-transform translateY(0)
        transform translateY(0)

        50%
            -webkit-transform translateY(6px)
            transform translateY(6px)

        100%
            -webkit-transform translateY(0)
            transform translateY(0)

        @keyframes arrow
            0%
            -webkit-transform translateY(0)
            transform translateY(0)

        50%
            -webkit-transform translateY(6px)
            transform translateY(6px)

        100%
            -webkit-transform translateY(0)
            transform translateY(0)
      .logo
        position absolute
        top 30px
        left 40px
        background url(/iris3.svg) left center no-repeat
        background-size auto 100%
        padding-left 2.5rem
        padding-top 0.5rem
        bold 3rem 3rem

        color #fff


        shadow()



      .menu
        position absolute
        top 2rem
        right 3rem
        cursor pointer
        a, a:visited
          color white
          text-decoration none
          margin-right 1.1rem
          regular 1.1rem 3rem
          opacity 0.8
          transition opacity 0.1s ease
          padding 0.3rem
          &:hover
            opacity 1

        shadow()
        .callback
          display inline-block
          medium 1rem 3rem
          color white
          cursor pointer
          transition transform 0.1s ease
          &:hover
            transform scale(1.1)
          &:before
            icon "\f4b9"
            border 1px solid white
            size 3rem
            text-align center
            border-radius 500px
            font-size 2rem
            vertical-align bottom
            line-height 3rem
            margin-right 0.5rem


      .slogan
        color white
        position absolute
        width 60%
        top 45%
        left 50%
        transform translate(-50%,-50%)
        .h2
          light 3rem 4rem
          text-align center
          text-transform uppercase
          shadow()
          margin-bottom 1.5rem
        .h3
          text-align center
          medium 1rem 1.4rem
          shadow()

    .second
      background white
      padding 7rem 0
      .header
        medium 3rem 3.2rem
        padding-bottom 1rem
        font-family 'Roboto'
      .text
        regular 1rem 1.7rem

        margin 0 0 1.2rem 0
        p
          margin-bottom 1.2rem
          color #6a6a6a
    .slider.block
        padding 50px 0 20px 0
        // background #e9e9e9
        background rgba(218,218,218, 0.9)
        line-height 500px
        &:hover
          .slick-prev, .slick-next
            opacity 1 !important
      .promo_blocks
        .block
          height 100%
          flexy row nowrap
          justify center center
          img
            width 100%
            flex 0 0 100%
        .slick-prev, .slick-next
          width 40px
          height 40px
          opacity 0 !important
          transition opacity 0.3s ease
          -webkit-transition opacity 0.3s ease
          &:hover
            &:before
              opacity 0.8 !important

        .slick-next
          right -90px
          &:before
            icon "\f125"
            padding 11px 4px 9px 6px

        .slick-prev
          left -90px
          &:before
            padding 11px 6px 9px 4px
            icon "\f124"

        .slick-prev:before, .slick-next:before
          color #fff
          border-radius 500px
          display block
          background #4d4d4d
          opacity 0.2

    .our-products
      padding 4rem 0
      background #fff
      .header
        .title
          medium 2.5rem 3.2rem
          padding-bottom 0.3rem
          font-family 'Roboto'
        .sub-title
          light 1.2rem 1.8rem
          color #3a3a3a
      .products
        flexy row wrap
        margin-top 2rem
        .product
          position relative
          flex 0 0 18.5rem
          height 200px
          margin 0 1rem 1rem 0
          &:nth-child(1)
            background url('/products/1.jpg') center center no-repeat
            background-size 100% 100%
            transition background-size 0.5s
            &:hover
              background-size 115% 115%
              transition background-size 0.5s
          &:nth-child(2)
            background url('/products/2.jpg') center center no-repeat
            background-size 100% 100%
            transition background-size 0.5s
            &:hover
              background-size 115% 115%
              transition background-size 0.5s
          &:nth-child(3)
            background url('/products/3.jpg') center center no-repeat
            background-size 100% 100%
            transition background-size 0.5s
            &:hover
              background-size 115% 115%
              transition background-size 0.5s
          &:nth-child(4)
            background url('/products/4.jpg') center center no-repeat
            background-size 100% 100%
            transition background-size 0.5s
            &:hover
              background-size 115% 115%
              transition background-size 0.5s
          &:nth-child(5)
            background url('/products/5.jpg') center center no-repeat
            background-size 100% 100%
            transition background-size 0.5s
            &:hover
              background-size 115% 115%
              transition background-size 0.5s
          &:nth-child(6)
            background url('/products/6.jpg') center center no-repeat
            background-size 100% 100%
            transition background-size 0.5s
            &:hover
              background-size 115% 115%
              transition background-size 0.5s
          &:hover
            .inner
              .background
                opacity 0.9
                transition 0.5s
              p
                opacity 1
                transition 0.5s
          .inner
            height 100%
            .background
              background rgba(0,0,0,0.7)
              cursor pointer
              opacity 0
              transition 0.5s
              position absolute
              left 0
              top 0
              height 100%
              width 100%

            a
              opacity 0
              z-index 55
              position absolute
              display block
              top 0
              left 0
              width 100%
              height 100%
            p
              position absolute
              top 50%
              left 50%
              transform translate(-50%,-50%)
              text-decoration none
              text-align center
              color #fff
              min-width 190px
              regular 1rem 1.5rem
              padding 0.8rem 2rem
              border 1px #fff solid
              opacity 0
              transition 0.5s

    .third
      padding 5rem 0 10rem 0
      background url(/third.jpg) center center no-repeat
      background-size cover
      .header
        medium 3rem 8rem
        padding 1rem 0 2.6rem 0
        color white
        text-align center
        font-family 'Roboto'

      .service
        flexy row nowrap
        justify space-between flex-start
        color white
        &-item
          flex 0 0 280px
          margin 0 20px
          flexy column nowrap
          justify flex-start center
          &-icon
            flex 0 0 5rem
            &:before
              font-size 4rem
              line-height 5rem
            &.case
              &:before
                icon "\f26c"
            &.delivery
              &:before
                font-size 4.6rem
                icon "\f3ec"
            &.teach
              &:before
                icon "\f149"

          &-name
            medium 1.2rem 1.2rem
            padding 1.1rem 0
            opacity 0.8

          &-text
            regular 0.85rem 1.4rem
            text-align center
            opacity 0.8



    .fourth
      background white
      padding 1rem 0 5rem 0
      .header
        medium 3rem 8rem
        padding 1rem 0 2.6rem 0
        color #000
        font-family 'Roboto'
        text-align center

      .service
        flexy row nowrap
        justify space-between flex-start
        color black
        &-item
          flex 0 0 270px
          margin 0 20px
          flexy column nowrap
          justify flex-start center
          &-icon
            flex 0 0 13rem
            text-align center
            img
              width 190px
              height 190px
              round()


          &-name
            regular 1.2rem 1.2rem
            padding 1.1rem 0
            text-align center


          &-text
            light 0.85rem 1.4rem
            text-align center
            opacity 0.8
    .form
      background rgba(0,0,0,.35)
      padding 5em 0 5.5rem 0
      form
        width 20rem
        margin 0 auto
        input
          background #fff
          border 0
          outline none
          display block
          width 100%
          color #110404
          regular 1rem 1.2rem
          padding 1rem
        label
          display block
          regular 1.2rem 1.2rem
          margin-top 1.5rem
          color #fff
          shadow()
          margin-bottom 1rem
          &:first-child
            margin-top 0
        input
          display block
        .button
          margin 0 auto
          padding 0.9rem 0 0.7rem 0
          regular 1rem 1.2rem
          cursor pointer
          margin-top 2rem
          background transparent
          color #fff
          border 1px #fff solid
          transition background 0.3s, color 0.3s
          &:hover
            background #fff
            color #000
            transition background 0.3s, color 0.3s

    .footer
      padding 3.5rem 0 4rem 0
      background rgba(0,0,0,.8)
      .container
        flexy row wrap
        .left
          flex 1 1 13rem
          .ad
            text-align center
            p
              color #fff
              width 220px
              light 1.5rem 2.5rem
              margin-top 0.75rem
              &:first-child
                margin-top 0

        .right
          flex 1 1 13rem
          .email
            margin 0 auto
            width 220px
            a
              color #fff
              text-decoration none
              border-bottom 2px #fff solid
              display inline-block
              light 1.5rem 2.3rem
              margin-top 0.7rem
              &:first-child
                margin-top 0


    #map-canvas
      height 300px
      a[href^="http://maps.google.com/maps"]
        display none !important
      .gm-style-cc
        display none

      .gmnoprint a, .gmnoprint span
        display none

      .gmnoprint div
        background none !important